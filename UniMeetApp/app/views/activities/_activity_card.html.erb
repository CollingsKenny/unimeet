    <div class="card-body">
        <h5 class="card-title badge badge-pill badge-dark"><%= @activity.name %></h5>
        <p class="card-text"><%= @activity.description %></p>
    </div> 
    <div class="card-body">
    	
    </div>

    <div class="row">
    		<div class="col alight-left">
    			<%= button_to "Like", {action: "like_activity", id: @activity.id}, {class: 'btn btn-success'} %>
