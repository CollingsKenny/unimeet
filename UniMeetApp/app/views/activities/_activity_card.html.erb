<div class="card border border-dark">
    <%= display_activity_image(:medium) %>
    <div class="card-body">
        <h5 class="card-title"><%= @activity.name %></h5>
        <p class="card-text"><%= @activity.description %></p>
    </div> 
</div>

<div class="card-body mxauto">
	<%= button_to "Like", action: "like_activity", id: @activity.id %>
	<%= button_to "Dislike", action: "dislike_activity", id: @activity.id %>
    </div>