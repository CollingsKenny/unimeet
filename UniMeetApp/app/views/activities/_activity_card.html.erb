<div id="card">
<div class="card border border-dark p-1" ontouchstart="this.classList.toggle('hover');" >
      <%= display_activity_image(activity, :medium, "card-img-top") %>
        <div class="card-body">
        <h5 class="card-title btn btn-dark"><%= activity.name %></h5>
        <p class="card-text btn-light activity-description"><%= activity.description %></p>
    </div>
</div>


<!-- Buttons -->
<div class="row justify-content-center mt-2">
      <% if activity.project_owner_id != current_user.id  %>
        <%= link_to "Dislike", {action: "dislike_activity", controller: "pages", id: activity.id, :remote => true}, {class: 'btn btn-danger mr-2'} %>
  			<%= link_to "Like", {action: "like_activity", controller: "pages", id: activity.id, :remote => true}, {class: 'btn btn-success ml-2'} %>
      <% else %>
        <%= link_to "Edit", {action: "show_edit_activity_card", :controller=>"pages", id: activity.id, :remote => true, method: :get }, {class: 'btn btn-primary'} %>
      <% end %>
</div>
</div>

