<p id="notice"><%= notice %></p>

<h1>Activity Cards</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_cards.each do |activity_card| %>
      <tr>
        <td><%= activity_card.activity_id %></td>
        <td><%= link_to 'Show', activity_card %></td>
        <td><%= link_to 'Edit', edit_activity_card_path(activity_card) %></td>
        <td><%= link_to 'Destroy', activity_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity Card', new_activity_card_path %>
