<%= form_for message, remote: true, authenticity_token: true do |f| %>
  <%= f.label :your_message %>
  <%= f.text_area :content, class: "form-control", data: {textarea: "Write your message..."} %>

  <%= f.hidden_field :chatroom_id, value: chatroom.id %>
  <%= f.submit, class: "fa fa-paper-plane", style: "display: none", data: {send: "message"} %>
<% end %>
