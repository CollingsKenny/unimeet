<%= form_for message, class: "wrap", remote: true, authenticity_token: true, html: {id: "new_message"} do |f| %>
  <%= f.text_area :content, class: "form-control chatinput", placeholder: "Write a message...", data: {textarea: "message"}, required: true %>
  <%= f.hidden_field :chatroom_id, value: chatroom.id %>
  <%= button_tag type: 'submit', class: "chatmessagesubmit", id: "register-button", data: { disable_with: "Please wait...", send: "message"} do %>
        <i class="fa fa-paper-plane" aria-hidden="true"></i>
    <% end %>
  
<% end %>


