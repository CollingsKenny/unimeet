<div class="card-flipper mx-auto">
  <div class="card border border-dark swipe-card m-0" onclick="flip()" ontouchstart="this.classList.toggle('hover');" >
    <div id="old">
		<%= render 'pages/swipe_profile_card', user: user%>
	</div>
	<div id="new">
   	</div>
  </div>
</div>
<!-- Buttons -->
<div class="row justify-content-center mt-2 buttons" >
	<%= link_to "Dislike", {action: "dislike_profile", controller: "pages", id: user.id, :remote => true}, {class: 'btn btn-danger mr-2'} %>
	<%= link_to "Like", {action: "like_profile", controller: "pages", id: user.id, :remote => true}, {class: 'btn btn-success ml-2'} %>
</div>