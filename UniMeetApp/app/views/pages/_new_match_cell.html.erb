<%= link_to({action: "show_card", controller: "pages", id: activity.id, method: :get, :remote => true}, class: "nav-link p-0") do %>
	<div class= "nav flex-row activity-row p-2 text-dark">
		<div class="oval-cell vertical-center">
			<div class = "col-2 p-0">
				<%= display_activity_image(activ, :thumb, "rounded-circle") %>
			</div>
			<div class = "col-10 vertical-center cell-activity_name">
				<h4><%= activ.name%></h4>
			</div>
		</div>
	</div>
<% end %>