<%= link_to({action: "show_profile_card", controller: "/pages", id: user.id, method: :get, :remote => true}, class: "nav-link p-0") do %>
<div class= "nav flex-row activity-row p-2 text-dark">
  <div class="mini-card education">
    <div class="overlay"></div>
    <div class="circle">
      <%= display_activity_image(user, :medium, "w-75 rounded-circle") %>
    </div>
    <div class = "cell-activity_name">
      <p class= "m-0"><%= user.first_name %></p>
      <% unless user.major.nil? or user.major.empty? %>
      <p class="m-0"><%= user.major%></p>
      <% end %>
      <% unless user.college_location.nil? or user.college_location.empty? %>
      <p class="m-0"><%= user.college_location%></p>
      <% end %>
    </div>
  </div>
</div>
<% end %>
