$('#card-container').html("<%= escape_javascript(render :partial => 'pages/full_swipe_profile_card', locals: { user: @user }, :remote => true) %>");
$(document).ready( function() {
$('a').on('ajax:beforeSend', function() {
  $("#loader").show();
});

$('a').bind('ajax:complete', function() {
  $("#loader").hide();
});
});