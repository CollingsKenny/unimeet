<body>
	<% if user_signed_in? %>
 	<canvas id="canvas"></canvas>
	<div class = "row d-flex">
<!-- Sidebar -->
		<div class = "col-md-3 d-none d-md-block sidebar">
			<div class = "sidebar-sticky">
				<ul class="nav nav-tabs" id="myTab" role="tablist" class="row">
					<li class="nav-item col-4">
						<a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Matched</a>
					</li>
					<li class="nav-item col-4">
						<a class="nav-link" id="activities-tab" data-toggle="tab" href="#joined-activities" role="tab" aria-controls="joined" aria-selected="false">Connect</a>
					</li>
					<li class="nav-item col-4">
						<a class="nav-link" id="activities-tab" data-toggle="tab" href="#my-activities" role="tab" aria-controls="profile" aria-selected="false">Owned</a>
					</li>
				</ul>
				<div class="tab-content" id="myTabContent">
					<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
						<% activity = Activity.joins(:matches).where({ "matches.user_id" => current_user.id}) %>
						<% activity.each do |activ| %>
							<%= link_to({action: "show_card", controller: "pages", id: activ.id, method: :get, :remote => true}, class: "nav-link p-0") do %>
								<div class= "nav flex-row activity-row p-2 text-dark">
									<div class = "col-2 p-0">
									<%= display_activity_image(activ, :thumb, "rounded-circle") %>
									</div>
									<div class = "col-10">
										<h4><%= activ.name%></h4>
										<p><%= activ.description%></p>
									</div>
								</div>
							<% end %>
						<% end %>
					</div>
					<div class="tab-pane fade" id="my-activities" role="tabpanel" aria-labelledby="profile-tab">
						<% activity = Activity.joins(:memberships).where({ "memberships.ownership" => true, "memberships.user_id" => current_user.id}) %>
						<% activity.each do |activ| %>
							<%= link_to({action: "show_card", controller: "pages", id: activ.id, method: :get, :remote => true}, class: "nav-link p-0") do %>
								<div class= "nav flex-row activity-row p-2 text-dark">
									<div class = "col-2 p-0">
										<%= display_activity_image(activ, :thumb, "rounded-circle") %>
									</div>
									<div class = "col-10">
										<h4><%= activ.name%></h4>
										<p><%= activ.description%></p>
									</div>
								</div>
							<% end %>
						<% end %>
					</div>
					<div class="tab-pane fade" id="joined-activities" role="tabpanel" aria-labelledby="joined-tab">
						<% activity = Activity.joins(:memberships).where({ "memberships.ownership" => false, "memberships.user_id" => current_user.id}) %>
						<% activity.each do |activ| %>
							<%= link_to({action: "show_card", controller: "pages", id: activ.id, method: :get, :remote => true}, class: "nav-link p-0") do %>
								<div class= "nav flex-row activity-row p-2 text-dark">
									<div class = "col-2 p-0">
										<%= display_activity_image(activ, :thumb, "rounded-circle") %>
									</div>
									<div class = "col-10">
										<h4><%= activ.name%></h4>
										<p><%= activ.description%></p>
									</div>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>	
			</div>
		</div>
<!-- Card -->
		<div class = "col-md-9 ml-sm-auto pt-5 px-auto justify-content-center">
			<div class = "col-5 mx-auto" >
				<div id="card-container">
					<% queue = Activity.queue(current_user.id) %>
					<% if queue.count > 0 %>
						<% nextActivityInQueue = queue.first() %>
						<%= render 'activities/activity_card', activity: nextActivityInQueue%>
					<% else %>
						<%= render 'pages/empty_deck', type: 'activity'%>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<% end %>

</body>

