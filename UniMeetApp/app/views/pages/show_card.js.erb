if (!$('#card-container').length){
	$('#main_view').html('<div id="card-container"></div>');
}
$('#card-container').html("<%= escape_javascript(render :partial => 'activities/activity_card', locals: { activity: @activity }, :remote => true) %>");
$("#loader").hide();
$(".notification_wrapper").removeClass("open").removeClass("opened");
$(document).ready( function() {
$('a').on('ajax:beforeSend', function() {
  $("#loader").show();
});

$('a').bind('ajax:complete', function() {
  $("#loader").hide();
});
});