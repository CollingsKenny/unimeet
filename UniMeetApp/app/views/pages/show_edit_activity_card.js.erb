$('#card-container').html("<%= escape_javascript(render :partial => 'activities/edit_activity_card', locals: { activity: @activity }, :remote => true) %>");
$("#loader").hide();

$(document).ready( function() {
$('a').on('ajax:beforeSend', function() {
  $("#loader").show();
});

$('a').bind('ajax:complete', function() {
  $("#loader").hide();
});
});