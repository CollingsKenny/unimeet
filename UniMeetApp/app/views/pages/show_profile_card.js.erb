$('.buttons').remove();
$('#card-container').html("<%= escape_javascript(render :partial => 'users/user_card', locals: { user: @user }, :remote => true) %>");
$(".notification_wrapper").removeClass("open").removeClass("opened");
$("#loader").hide();

$(document).ready( function() {
$('a').on('ajax:beforeSend', function() {
  $("#loader").show();
});

$('a').bind('ajax:complete', function() {
  $("#loader").hide();
});
});