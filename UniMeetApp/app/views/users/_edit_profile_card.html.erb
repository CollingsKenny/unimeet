<%= form_for(current_user, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
<p class="circleBase text-light" id="flip-button" onclick="flip()"><i class="fas fa-sync"></i></p>
<div class="card-flipper mx-auto">
    <div class="card border border-dark m-0 swipe-card"">
        <div class="front">
            <% @user = current_user %>
            <div data-imagedrop style='background-image: url(<%= image_url(:medium)%>)'>
              <%= f.file_field :image %>
            </div>
          <div class="card-body" style='padding-top: 19rem'>
            <div class="row">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "off", class: "form-control col-md-5 name_field float-left" %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "off", class: "form-control col-md-5 name_field last_name float-right" %>
            </div>
              <%= f.select(:academic_year, [
                    ['Please Select One',''],
                    ['Freshman','Freshman'],
                    ['Sophomore','Sophomore'],
                    ['Junior','Junior'],
                    ['Senior','Senior'],
                    ['Graduate','Graduate']
                    ], {}, { :class => "mt-5 form-control" }) %>
          </div>
        </div>
        <div class="back p-2 bg-white border border-dark">
                  <div class="form-group pr-4">
                    <%= f.select(:college_location, [
                    ['Please Select One',''],
                    ['Cowell','Cowell'],
                    ['Stevenson','Stevenson'],
                    ['Crown','Crown'],
                    ['Merrill','Merrill'],
                    ['Porter','Porter'],
                    ['Kresge','Kresge'],
                    ['Oakes','Oakes'],
                    ['Rachel Carson','Rachel Carson'],
                    ['College Nine','College Nine'],
                    ['College Ten','College Ten'],
                    ['Off Campus','Off Campus']
                    ], {}, { :class => "form-control m-1" }) %>
                    <%= f.text_field :major, autofocus: true, autocomplete: "off", class: "card-text btn btn-secondary m-1" %>
                    <%= f.label :interests %><br />
                    <%= f.text_area :interest_list, autofocus: true, autocomplete: "off", class: "form-control m-1" %>
                    <%= f.label :bio %><br />
                    <%= f.text_area :bio, autofocus: true, autocomplete: "off", class: "form-control m-1" %>
                  </div>
          
        </div>
    </div>
</div>


<!-- Buttons _edit_prfile_card-->

<div class="buttons">
  <div class="row justify-content-center mt-2 buttons">
    <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary" %>
            <% end %>
      </div>
  </div>
</div>


