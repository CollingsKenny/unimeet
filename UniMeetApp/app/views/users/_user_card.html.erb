<div class="card border border-dark swipe-card">
    <%= image_tag(@user.image.url(:medium), :alt => "300x300.png", :class => "card-img-top") %>
    <div class="card-body p-2">
        <h5 class = "card-title"><%= @user.first_name %></h5>
        <h6 class = "card-text"><%= @user.major %></h6>
        <p class = "card-text activity-description"><%= @user.bio %></p>
        <% @user.interests.each do |interest| %>
            <p class="badge"><%= "#{interest.interest_name}" %></p>
        <% end %>
    </div>
</div>


<!-- Buttons -->
<div class="row justify-content-center mt-2">
            <%= button_to "Dislike", {action: "dislike_profile", id: @user.id}, {class: 'btn btn-danger mr-2'} %>
            <%= button_to "Like", {action: "like_profile", id: @user.id}, {class: 'btn btn-success ml-2'} %>
</div>